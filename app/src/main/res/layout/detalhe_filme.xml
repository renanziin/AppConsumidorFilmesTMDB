<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scenarios.DetalheFilme.DetalheFilmeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imgFilme"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:contentDescription="@string/imagem_de_capa_do_filme" />

            <ProgressBar
                android:id="@+id/pbCarregandoDetalheFilme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tvTituloFilme"
            style="@style/tvNormaisDetalheFilme"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#423f3e"/>

        <TextView
            android:id="@+id/tvGenerosFilme"
            style="@style/tvNormaisDetalheFilme"
            android:layout_marginTop="3dp"/>


        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <GridLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="1">

                <TextView
                    android:text="@string/avaliacao"
                    style="@style/tvNegritasDetalheFilme"/>

                <TextView
                    android:id="@+id/tvAvaliacaoFilme"
                    style="@style/tvNormaisDetalheFilme"/>


            </GridLayout>

            <GridLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="1">

                <TextView
                    android:text="@string/duracao"
                    style="@style/tvNegritasDetalheFilme"/>

                <TextView
                    android:id="@+id/tvDuracaoFilme"
                    style="@style/tvNormaisDetalheFilme"/>


            </GridLayout>

            <GridLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rowCount="2"
                android:columnCount="1">

                <TextView
                    android:text="@string/lancamento"
                    style="@style/tvNegritasDetalheFilme"/>

                <TextView
                    android:id="@+id/tvLancamentoFilme"
                    style="@style/tvNormaisDetalheFilme"/>


            </GridLayout>



        </LinearLayout>




        <TextView
            android:id="@+id/tvOverview"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </LinearLayout>


</ScrollView>